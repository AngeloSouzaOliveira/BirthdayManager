@model AngSoz.BirthdayManager.Web.Models.Presente;

@{
    ViewData["Title"] = "Excluir Presente";
}


<div class="col-md-8 col-lg-9">
    <h3 class="title-table"><strong>@ViewData["Title"]</strong></h3>
    <div class="block">
        <div class="block-title">
            <ul class="nav nav-tabs" data-toggle="tabs">
                <li class="active"><h4>Deseja excluir o presente de @Model.Pessoas.Nome ? </h4></li>
            </ul>

        </div>

        <div class="tab-content">
            <div class="tab-pane active" id="tickets-list">
                <div class="block-content-full">
                    <div class="table-responsive remove-margin-bottom">

                        <table class="table table-striped table-vcenter remove-margin-bottom">

                            <tbody>

                                <tr>
                                    <td class="text-left">Nome do presente:</td>
                                    <td>@Model.NomePresente</td>
                                </tr>

                                <tr>
                                    <td class="text-left">Valor do presente:</td>
                                    <td>R$ @Model.ValorPresente </td>
                                </tr>

                                <tr>
                                    <td class="text-left">Pessoa presenteada:</td>
                                    <td>
                                        @Model.Pessoas.Nome @Model.Pessoas.SobreNome
                                    </td>
                                </tr>

                            </tbody>

                        </table>

                        <form asp-action="ExcluirPresente" style="padding-top:10px; padding-right:10px;">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Excluir" style="margin-left: 10px; margin-bottom: 10px;" class="btn themed-background-danger" />
                            <div class="pull-right">
                                <a class="btn themed-background-creme" asp-action="Editar" asp-route-id="@Model.Id">Editar</a>
                                <a class="btn themed-background-success" asp-action="Index"><i class="fa fa-undo"></i> Voltar a lista de aniversários</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

